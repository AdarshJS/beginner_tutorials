<launch>
  <env
       name="ROSCONSOLE_CONFIG_FILE"
       value="$(find beginner_tutorials)/config/debug.conf"
   />
    <arg name = "looprate" default = "10" />
    <arg name = "runRosbag" default = "false"/>
    <node
        pkg = "beginner_tutorials"
        type = "talker"
        name = "talker"
        output = "screen"
        args="$(arg looprate)"
    />

    <node
        pkg = "beginner_tutorials"
        type = "listener"
        name = "listener"
        output = "screen"
        launch-prefix = "gnome-terminal -e"
    />

    <node
        pkg="rosbag"
        name="record"
        type="record"
        args="-a -O output.bag"
        if="$(arg runRosbag)"
    />
</launch>
